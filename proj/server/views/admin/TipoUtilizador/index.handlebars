
<div class="container pt-3">

    {{#if TipoUtilizadores}}
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tipos de Utilizadores</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-5 card_userTypes_css">
                        <div class="d-flex flex-row">
                            <h1 class="alert alert-light" style="color: #17a2b8">Gestão de Tipos Utilizadores</h1>
                        </div>
                        <div class="d-flex flex-row">
                            <a href="/admin/usertype/create"><button class="btn btn-info">Novo Tipo de utilizador <i class="fas fa-plus-circle"></i></button></a>
                        </div>
                    </div>


                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered text-center">
                                <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Descrição</th>
                                    <th scope="col">Ações</th>
                                </tr>
                                </thead>

                                <tbody>
                                {{#each TipoUtilizadores}}
                                    <tr>
                                        <td>{{this.nome}}</td>
                                        <td>{{this.descricao}}</td>
                                        <td>
                                            <a href="/admin/usertype/edit/{{this.id}}">
                                                <button class="fa fa-pencil-square-o btn btn-light" style="color: deepskyblue; font-size: 14px"></button>
                                            </a>
                                            <a href="/admin/usertype/delete/{{this._id}}" class="delete" onclick="return confirm('Apagar o Tipo de Utilizador ?')">
                                                <button class="far fa-trash-alt btn btn-danger" style="color: white; font-size: 14px"></button>
                                            </a>
                                        </td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{else}}

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Tipos de Utilizadores</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-5 card_userTypes_css">
                        <div class="d-flex flex-row">
                            <h1 class="alert alert-light" style="color: #17a2b8">Gestão de Tipos Utilizadores</h1>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger" role="alert">
                            <strong>Não existem Tipos de utilizador ... </strong>
                            <a href="/admin/usertype/create"><button class="btn btn-outline-info">Novo Tipo</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}

</div>