<div class="container pt-3">
    {{prestador}}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            {{#if admin}}
            <li class="breadcrumb-item"><a href="/admin/user/index">Utilizadores</a></li>
            {{/if}}
            <li class="breadcrumb-item active" aria-current="page">{{utilizador.nome}}</li>
        </ol>
    </nav>


    <div class="row justify-content-center pb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header p-5 card_users_css">
                    <div class="d-flex flex-row">
                        <h1 class="alert alert-light" style="color: #17a2b8">{{utilizador.nome}}</h1>
                    </div>
                </div>

                <ul class="nav nav-pills">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/admin/user/show/{{utilizador.id}}">Perfil de Cliente</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active bg-info" href="/admin/user/servicos/{{utilizador.id}}">Serviços Adquiridos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/admin/user/products/{{utilizador.id}}">Produtos Adquiridos</a>
                    </li>
                </ul>



                {{#if servicos}}

                    <div class="card-body">
                        <hr class="bg-info">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered text-center">
                                <thead class="thead-dark">
                                <tr>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Descrição</th>
                                    <th scope="col">Preço</th>
                                </tr>
                                </thead>

                                <tbody>
                                {{#each servicos}}

                                    <tr>
                                        <td>{{this.nome}}</td>
                                        <td>{{this.nome}}</td>
                                        <td>{{this.preco}} €</td>
                                    </tr>
                                {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>

                {{else}}


                    <div class="card-body">
                        <hr class="bg-info">
                        <div class="form-group">
                            <div class=" col-md-12">
                                <div class="alert alert-danger" role="alert">
                                    <strong>{{utilizador.nome}} não tem serviços </strong>
                                </div>
                                <a class="btn btn-outline-danger" href="/admin/user/index" role="button">Voltar</a>
                            </div>
                        </div>

                    </div>



                {{/if}}
            </div>
        </div>
    </div>

</div>
