
<div class="container pt-3">

{{#if utilizadores}}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Utilizadores</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header p-5 card_users_css">
                    <div class="d-flex flex-row">
                        <h1 class="alert alert-light" style="color: #17a2b8">Gestão de Utilizadores</h1>
                    </div>
                    <div class="d-flex flex-row">
                        <a href="/admin/user/create" >
                            <button class="btn btn-info">Novo utilizador <i class="fas fa-plus-circle"></i></button>
                        </a>
                    </div>
                </div>


                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered text-center">
                            <thead class="thead-dark">
                            <tr>
                                <th scope="col">Nome</th>
                                <th scope="col">Email</th>
<!--                                <th scope="col">Password</th>-->
                                <th scope="col">Tipo de utilizador</th>
                                <th scope="col">Ações</th>

                            </tr>
                            </thead>

                            <tbody>
                            {{#each utilizadores}}
                                <tr>
                                    <td><a href="/admin/user/show/{{this.id}}">{{this.nome}}</a></td>
                                    <td>{{this.email}}</td>
                                    <td>{{this.tiposUtilizador.nome}}</td>

                                    <td>
                                        <a href="/admin/user/edit/{{this.id}}">
                                            <button class="fa fa-pencil-square-o btn btn-light" style="color: #00bfff; font-size: 14px"></button>
                                        </a>
                                        <a href="/admin/user/delete/{{this._id}}" class="delete" onclick="return confirm('Apagar o Utilizador ?')">
                                            <button class="far fa-trash-alt btn btn-danger" style="color: white; font-size: 14px"></button>
                                        </a>
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{else}}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Utilizadores</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header p-5 card_users_css">
                    <div class="d-flex flex-row">
                        <h1 class="alert alert-light" style="color: #17a2b8;">Gestão de Utilizadores</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <strong>Não existem utilizadores  ... </strong>
                        <a href="/admin/user/create"><button class="btn btn-outline-info">Novo Utilizador</button></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/if}}

</div>