<div class="container pt-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/admin">Home</a></li>
            {{#if admin}}
                <li class="breadcrumb-item"><a href="/admin/user/index">Utilizadores</a></li>
            {{else}}
                <li class="breadcrumb-item"><a href="/admin/user/show/{{loggedUser._id}}">Utilizadores</a></li>
            {{/if}}
            <li class="breadcrumb-item active" aria-current="page">Edição : {{utilizador.nome}}</li>
        </ol>
    </nav>

    <div class="row justify-content-center pb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header p-5 card_users_css">
                    <div class="d-flex flex-row">
                        <h1 class="alert alert-light" style="color: #33b5e5">Edição - {{utilizador.nome}}</h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <form action="/admin/user/update" method="POST">
                            <hr class="bg-info">

                            <input type="hidden" name="id" value="{{utilizador._id}}">
                            <input type="hidden" name="oldpass" value="{{utilizador.password}}">

                            <div class="pt-2 col-md-12">
                                <label for="nome">Nome:</label>
                                <input type="text" id="nome" name="nome" placeholder="Nome" class="form-control" value="{{utilizador.nome}}">
                            </div>

                            <div class="pt-2 col-md-8">
                                <label for="email">Email:</label>
                                <input type="email" id="email" name="email" placeholder="email do utilizador " class="form-control" value="{{utilizador.email}}">
                            </div>
                            <div class="pt-2 col-md-4">
                                <label for="password">password:</label>
                                <input type="password" id="password" name="password" placeholder="password do Utilizador" class="form-control" value="{{utilizador.password}}">
                            </div>


                            <div class="pt-3 col-md-8">
                                <button type="submit" class="btn btn-info float-left">Guardar <i class="far fa-save"></i></button>
                            </div>

                        </form>
                        {{#if admin}}
                            <a href="/admin/user/index" role="button">
                                <button class="btn btn-outline-danger ml-1">Voltar</button>
                            </a>
                        {{else}}
                            <a href="/admin/user/show/{{loggedUser._id}}" role="button">
                                <button class="btn btn-outline-danger ml-1">Voltar</button>
                            </a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>