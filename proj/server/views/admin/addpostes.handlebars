<h2>Nova Categoria:</h2>
<div class="card">
    <div class="card-body">
        <form action="/admin/postes/novo" method="POST">


            <label for="nome">titulo:</label>
            <input type="text" id="titulo" name="titulo" placeholder="titulo do post" class="form-control">
            <label for="descricao">descricao:</label>
            <input type="text" id="descriacao" name="descriacao" placeholder="descriacao do post" class="form-control">

            <label for="conteudo">titulo:</label>
            <input type="text" id="conteudo" name="conteudo" placeholder="conteudo do post" class="form-control">
            <label for="categoria">categoria:</label>
           <select name="categoria" class="custom-select">

               {{#each categorias}}
                   <option value="{{_id}}">{{nome}}</option>

               {{else}}
                   <option value="0">Nenhuma categoria registada</option>
               {{/each}}
           </select>
            <br>
            <button type="submit" class="btn btn-success">Criar post</button>

        </form>
    </div>
