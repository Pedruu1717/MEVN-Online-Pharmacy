<div class="container pt-3">
    {{#if produtos}}
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Produtos</li>
            </ol>
        </nav>

        <div class="row justify-content-center pb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-5 card_userTypes_css">
                        <div class="d-flex flex-row">
                            <h1 class="alert alert-light" style="color: #17a2b8">Gestão de Produtos</h1>
                        </div>
                        {{#if admin}}
                            <div class="d-flex flex-row">
                                <a href="/admin/product/create" ><button class="btn btn-info">Novo Produto <i class="fas fa-plus-circle"></i></button></a>
                            </div>
                        {{/if}}
                    </div>


                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered text-center">
                                <thead class="thead-dark">
                                <tr>
                                    <th></th>
                                    <th scope="col">Nome</th>
                                    <th scope="col">Código</th>
                                    <th scope="col">Tipo</th>
                                    <th scope="col">Preço</th>
                                    <th scope="col">Ações</th>
                                </tr>
                                </thead>

                                <tbody>
                                {{#if admin}}
                                    {{#each produtos}}
                                        <tr class="rowClass">
                                            <td class="cellClass"><img style="width: 20%" src="http://localhost:8082/uploads/imgs/{{this.imagem}}" alt="img"/></td>
                                            <td class="cellClass">{{this.nome}}</td>
                                            <td class="cellClass">{{this.codigo}}</td>
                                            <td class="cellClass">{{this.tipo}}</td>
                                            <td class="cellClass">{{this.preco}} €</td>
                                            <td class="cellClass">

                                                <a href="/admin/product/edit/{{this.id}}">
                                                    <button class="fa fa-pencil-square-o btn btn-light" style="color: deepskyblue; font-size: 14px"></button>
                                                </a>
                                                <a href="/admin/product/delete/{{this._id}}">
                                                    <button class="far fa-trash-alt btn btn-danger" style="color: white; font-size: 14px"></button>
                                                </a>

                                            </td>
                                        </tr>
                                    {{/each}}
                                {{else}}
                                    {{#each produtos}}
                                        <tr class="rowClass">
                                            <td class="cellClass"><img style="width: 20%" src="http://localhost:8082/uploads/imgs/{{this.imagem}}" alt="img"/></td>
                                            <td  class="cellClass">{{this.nome}}</td>
                                            <td  class="cellClass">{{this.codigo}}</td>
                                            <td  class="cellClass">{{this.tipo}}</td>
                                            <td  class="cellClass">{{this.preco}} €</td>
                                            <td  class="cellClass">
                                                <a href="/admin/user/addproduct/{{this.id}}">
                                                    <button class="fas fa-shopping-cart btn btn-info" style="color: white; font-size: 14px"></button>
                                                </a>
                                            </td>

                                        </tr>
                                    {{/each}}
                                {{/if}}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{else}}

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Produtos</li>
            </ol>
        </nav>

        <div class="row justify-content-center">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header p-5 card_userTypes_css">
                        <div class="d-flex flex-row">
                            <h1 class="alert alert-light" style="color: #17a2b8">Gestão de produtos</h1>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-danger" role="alert">
                            <strong>Não existem produdos !</strong>
                            <a href="/admin/product/create"><button class="btn btn-outline-info">Novo Produto</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}

</div>