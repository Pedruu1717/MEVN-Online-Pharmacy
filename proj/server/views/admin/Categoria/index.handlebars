<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categoria/add" ><button class="btn btn-success"> Nova Categoria</button></a>

{{#each categorias}}
    <div class="card">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>{{slug}}</small>

        </div>
        <a href="/admin/categoria/edit/{{_id}}"><button class="btn btn-success mt-4">Editar categoria</button></a>


        <form action="/admin/categoria/delete" method="post">
            <input type="hidden" name="id" value="{{_id}}">
            <button class="btn btn-danger mt-4">Apagar</button>
        </form>
    </div>

{{else}}

{{/each}}